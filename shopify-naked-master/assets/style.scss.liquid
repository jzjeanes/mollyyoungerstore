/*============================= Responsive styles =============================*/

/*============================= For short screens =============================*/

@media screen and (max-height: 630px) {
 
#product-details {
    box-sizing: border-box;
    position:relative;
    top:0;
    height:min-content;
}
}

/*============================= Mobile =============================*/

@media screen and (max-width: 830px) {

html {
    font-size:11px;
}

.product-list {
    width: calc(100%/2);
}

header {
    height:13vw;
    letter-spacing:.02rem;
    text-decoration:none;
}

#nav {
    position:fixed;
    top:5vw;
}


#logo {
    position: fixed;
    /* center the element */
    right: 0;
    left: 0;
    top:4vw;
    margin-right: auto;
    margin-left: auto;
    /* give it dimensions */
    height: auto;
    width:35vw;
    z-index:1;
}

#logo img {
    height:auto;
}

#nav-cart {
    position:fixed;
    top:5vw;
}

}

/*============================= Big Computers! =============================*/

@media screen and (min-width: 1300px) {

html {
    font-size:13px;
}

.product-list {
    width: calc(100%/4);
}
}