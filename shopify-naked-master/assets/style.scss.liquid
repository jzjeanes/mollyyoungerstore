/*============================= Global styles =============================*/
html {
    font-family:Arial;
    text-transform:uppercase;
    font-size:13px;
    line-height:1.4;
}

body {
    margin:0 auto;
}

footer {
    clear:both;
    text-align: center;
    padding:20vw 10vw;
}


.align-right {
    text-align:right;
}

.page-heading {
    text-align:center;
    margin-top:2rem;
}

.align-left {
    text-align:left;
}




/*============================= Typography/Lists =============================*/


h1, h2, h3, h4, th {
    font-weight:normal;
    text-transform:uppercase;
}

h1 {
    font-size:1rem;
    margin-bottom:2rem;
    margin-top:1rem;
}

h3 {
    margin-top:2rem;
    font-size:1rem;
    margin-bottom:0;
}


ul {
    padding:0;
    margin:0;
}

li {
    margin-top:1rem;
}


p {
    margin-bottom:1rem;
    margin-top:0;
}

.small {
    text-transform:none;
}

.large {
    font-size:2.9vw;
    text-transform:none;
    line-height:1.2;
}






/*============================= Forms, buttons, tables =============================*/


label {
    display:block;
    margin-bottom:.5rem;
}


input, .btn {
    background-color: transparent;
    border: 1px solid black;
    color: black;
    padding: 1rem 1.5rem;
    font-size:1rem;
    font-family:inherit;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    text-transform:uppercase;
    cursor: pointer;
    margin-bottom:.25rem;
}

.primarycta {
    background-color:black;
    color:white;
    margin-left: 0;
}

input:hover {
    text-decoration: underline;
}

textarea {
  width: 80%;
  height: 4.25rem;
}

/* I'm not happy about how this select is styled, but it's here! */
select {
  /* To make things not styled by default */
  box-shadow: none;
  -webkit-appearance: none;
  outline: none;
  cursor: pointer;
  border-radius:0;
  /* To style it */
  padding-left:1rem;
  width: 12rem;
  border: 1px solid black;
  text-transform:uppercase;
  font-family:Arial;
  font-size:inherit;
  padding:1rem 1rem 1rem 1rem;
  /* To add a custom icon-------<svg xmlns="http://www.w3.org/2000/svg" width="11" height="11" viewBox="0 0 11 11"><path d="M4.33 8.5L0 1L8.66 1z" fill="#27ae60"/></svg> */
  background: #fff url('data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2210%22%20height%3D%227%22%20viewBox%3D%220%200%2011%2011%22%3E%3Cpath%20d%3D%22M4.33%208.5L0%201L8.66%201z%22%20fill%3D%22%black%22%2F%3E%3C%2Fsvg%3E') right 1rem center no-repeat;

  /* Hide arrow on FF */
  -moz-appearance: none;
  text-overflow: ellipsis;
}
/* Hide arrow on IE10*/
select::-ms-expand {
  display: none;
}

optgroup {
  color: inherit;
  font: inherit;
}

/* IE9: To hide select arrow we make the select overflow on the right side there is not another way :( */
@media screen and (min-width:0\0) {
  select {
    width: calc( 100% + 58px );
  }
}








/*============================= Links =============================*/

a {
    text-decoration:none;
    color:black;
}

a:visited {
    color:black;
}

a:hover {
    text-decoration:underline;
    color:black;
}

a:active {
    text-decoration:underline;
    color:black;
}







/*============================= Promo/Content elements =============================*/
.three_fifths {
    width:60%;
    height:auto;
    box-sizing: border-box;
    overflow: hidden;
}

.two_fifths {
    width:40%;
    height:auto;
    box-sizing: border-box;
    overflow: hidden;
}

.large-padding {
    padding:15% 6%;
}

.img_fillcontainer {
    max-width:100%;
    height:auto;
    display:block;
}

#promo-section {
    border-bottom:1px solid black;
}

#promo-section p {
    margin-bottom:2rem;
}

#home-products {
    margin-top:6rem;
}

#home-products h1 {
    text-align:center;
    font:inherit;
    text-transform:inherit;
}


/*============================= Product image zoom =============================*/
.zoom {
	display: block;
	position: relative;
	cursor:zoom-in;
}
		

.zoom img {
	display: block;
}




/*============================= Product listing =============================*/
.product-wrapper {
    margin:0;
}



 /*============================= Header =============================*/
 
header {
    height:9vw;
    letter-spacing:.02rem;
    text-decoration:none;
    border-bottom:1px solid black;
}

#nav {
    position:fixed;
    left:2vw;
    top:3.8vw;
    z-index:10;
}

#nav-cart {
    position:fixed;
    right:2vw;
    top:3.8vw;
    z-index:10;
}



#logo {
    position: fixed;
    /* center the element */
    right: 0;
    left: 0;
    top:2.7vw;
    margin-right: auto;
    margin-left: auto;
    /* give it dimensions */
    height: auto;
    width:25vw;
    z-index:10;
}

#logo img {
    height:auto;
}


 /*============================= Navigation (Footer + Header) =============================*/

#footer-nav {
    margin-bottom:1rem;
}

#nav li, #footer-nav li {
    display:inline;
    margin-right:1rem;
    margin-bottom:0;
}

#nav ul {
    list-style:none;
}


/* Move the last nav item so it doesn't have a weird margin on the right */
.last {
    margin-right:0 !important;
}




/*============================= Content page, Cart =============================*/

.page, #cart {
    width:70vw;
    margin:0 auto;
    padding-top:4vw;
}

/* Content page */

.page p, .page ul, .page li {
    text-transform:none;
    font-size:1.2rem;
}

iframe {
    width:100%;
}

.page img {
    max-width:150%;
    max-height:150%;
    position:relative;
    right: 25%;
    margin-top:1rem;
    margin-bottom:1rem;
}

/* Cart */

#cart h2 {
    font-size:1rem;
}

.cart-image {
    width:20%;
    margin-right:1rem;
}

.quantity {
    width: 3rem;
    height: 0rem;
    padding-left: .5rem;
    padding-right: .25rem;
}

.quantity-column {
    width:15%;
}

.total-column {
    width:8%;
}

.remove-column {
    width:2%;
    text-align:center;
}

#cart-actions {
    width:50%;
    float:right;
    text-align:right;
}

#special-instructions {
    width:50%;
    float:left;
    margin-top:2rem;
}

.cart-buttons {
    padding-bottom:1rem;
}

.empty {
    text-align:center;
}

/* Table styles */

td img {
    width:100%;
    height:auto;
    display:block;
}

thead {
    text-align:left;
}

td, th {
    padding: 0rem 1rem 0rem 0rem;
}

th {
    padding-bottom:.5rem;
}


table {
    width:100%;
    border-collapse:collapse;
}

th, tr {
    border-bottom:1px solid black;

}

.no-desktop {
    display:none;
}




 
 
/*============================= Product page =============================*/

#product-container {
  display: flex;
  flex-wrap: wrap;
  border-bottom:1px solid black;
}


#product-details {
    width:40%;
    box-sizing: border-box;
    padding:4vw 4vw 4vw 4vw;
    position:sticky;
    position: -webkit-sticky;
    top:3rem;
    height:min-content;
}

#product-details li {
    list-style:initial;
    margin-left: 1.25rem;
}

#product-details ul {
    margin-bottom:1rem;
}

#product-details h1 {
    margin-bottom:0;
}

#product-photos {
    width:60%;
    box-sizing: border-box;
    overflow: hidden;
}

#product-photos img {
    width:100%;
    height:100%;
    border-top:1px solid black;
    display:block;
}

#product-photos ul, #product-photos li {
    list-style:none;
    margin:0;
    padding:0;
}

#product-price {
    margin-bottom:2rem;
    font-weight:bold;
}

#product-variants {
    margin-bottom:.5rem;
}

#product-description {
    margin-bottom:3rem;
}

#product-add {
    margin-bottom:3rem;
}




/* ============================= Product listing =============================*/


.grid {
  display: flex;
  flex-wrap: wrap;
}

.product-list {
    width: calc(100%/3);
    box-sizing: border-box;
    list-style:none;
    overflow: hidden;
}

.product-wrapper {
    border-right:1px solid black;
    border-bottom:1px solid black;
}

.product-snippet {
    padding: 2% 2% 2% 3%;
}

.product-snippet-price {
    float:right;
}


/*============================= Product image change on hover =============================*/


.reveal .hide { 
    display: block !important; 
    visibility: visible !important;
}

.product:hover .reveal img { 
    opacity: 1; 
}
.reveal { 
    position: relative; 
}

.reveal .hide { 
  position: absolute;
  z-index: -1;
  top: 0;
  opacity: 0;
}

.reveal:hover .hide { 
  z-index: 5;
  opacity: 1;    
}



/*============================= Mobile overrides =============================*/


input[type="text"],
input[type="button"],
input[type="submit"] {
-webkit-appearance: none;
border-radius: 0;
}




/*============================= Responsive styles =============================*/

/*============================= For short screens =============================*/

@media screen and (max-height: 630px) {
 
#product-details {
    box-sizing: border-box;
    position:relative;
    top:0;
    height:min-content;
}
}


/*============================= Little Computers =============================*/

@media screen and (max-width: 830px) {

html {
    font-size:12px;
}

.product-list {
    width: calc(100%/2);
}

.product-snippet {
    font-size:.9rem;
}

.large-padding {
    padding: 8% 4%;
}

header {
    height:13vw;
    letter-spacing:.02rem;
    text-decoration:none;
}

#nav {
    position:fixed;
    top:5vw;
}

.large {
    font-size:4vw;
}

#logo {
    position: fixed;
    /* center the element */
    right: 0;
    left: 0;
    top:4vw;
    margin-right: auto;
    margin-left: auto;
    /* give it dimensions */
    height: auto;
    width:35vw;
    z-index:1;
}

#logo img {
    height:auto;
}

#nav-cart {
    position:fixed;
    top:5vw;
}

.page, #cart {
    width:85vw;
    padding-top:2vw;
}

}

/*============================= Tiny Computers =============================*/

@media screen and (max-width: 550px) {
 
     header {
         height:16vw;
     }
     
     .page, #cart {
        width:95vw;
        padding-top:2vw;
    }
     
     #nav, #nav-cart {
         top:6vw;
     }
     
     #logo {
         width:42vw;
         top:5vw;
     }
     
     #home-products {
         margin-top: 3rem;
     }
     
     .three_fifths {
        width:100%; 
     }
     
     .two_fifths {
         width:100%;
     }
     
     .large {
         font-size:1.75rem;
     }
     
     #product-photos {
        width: 100%;
        overflow-x: scroll;
        -webkit-overflow-scrolling: touch;
        overflow-y: hidden;
        white-space: nowrap;
        scroll-snap-type: mandatory;
     }
     
     #product-photos span, #product-photos ul, #product-photos li {
         display:inline-block;
         width:85vw;
     }
     
    
     #product-details {
         width:100%;
     }
     
     
     #cart h2, #cart p, table {
         font-size:.9rem;
     }
     
     td, th {
         padding: 0rem 0.5rem 0rem 0rem;
     }
     
     .total-column {
         display:none;
     }
     
     .cart-image {
         width:30%;
         margin-right:.5rem;
     }
    
    
    
    thead {
        display:none;
    }
    
    tbody {
        border-top:1px solid black;
    }
    
    td div {
        margin-top:.5rem;
    }
    
    .remove-column {
        width:2rem;
        position:relative;
        right:1rem;
    }
    
    .remove-column h2 {
        font-size:1.25rem !important;
    }
    
    #special-instructions, #cart-actions  {
        float:none;
        width:100%;
        text-align:center;
    }
    
    
    /* Put the quantity input under the price in a bad way */
    
    .price-column {
        position:relative;
        top:-1.5rem;
    }
    
    td.quantity-column {
        position:relative;
        top:1rem;
        right:3.85rem;
    }
    
    .item-column {
        width:45%;
        padding-left:1vw;
    }
    
    input[type="number"]:hover, input[type="password"]:hover,
    textarea:hover, select:hover {
      font-size: 16px;
    }
    
    
}

/*============================= Big Computers! =============================*/

@media screen and (min-width: 1300px) {

html {
    font-size:13px;
}

.product-list {
    width: calc(100%/4);
}
}