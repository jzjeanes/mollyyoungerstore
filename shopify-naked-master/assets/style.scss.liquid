/* Global styles */
html {
    font-family:Arial;
    text-transform:uppercase;
    font-size:12px;
    line-height:1.4;
}

body {
    margin:0 auto;
}

footer {
    clear:both;
    text-align: center;
    padding:20vw 10vw;
}







/* Typography */


h1, h2, h3, h4, th {
    font-size:1rem;
    letter-spacing:.02em;
    font-weight:normal;
}

h1 {
    text-align: center;
}

ul {
    padding:0;
    margin:0;
}

p {
    margin-bottom:2rem;
}

.large {
    font-size:2rem;
    text-transform:none;
}

.btn {
    display:inline-block;
    border:1px solid black;
    padding:1rem;
}






/* Forms and buttons */

select {
    height:2rem;
    font-size:inherit;
}

label {
    display:block;
    font-weight:bold;
}

.quantity {
    width:2rem;
}

table {
    width:100%;
}






/* Links */

a {
    text-decoration:none;
}

a:visited {
    color:inherit;
}

a:hover {
    text-decoration:underline;
}







/* Promo/Content elements */
.half-large {
    background-color:Silver;
    width:50%;
    height:auto;
    box-sizing: border-box;
    overflow: hidden;
}

.large-padding {
    padding:10%;
}

.half-large img {
    max-width:100%;
    max-height:100%;
    display:block;
}






/* Start zoom styles */
.zoom {
	display: block;
	position: relative;
}
		

.zoom img {
	display: block;
}



 /* Start header section */
header {
    height:9vw;
    letter-spacing:.02rem;
    text-decoration:none;
    border-bottom:1px solid black;
}

#nav {
    position:fixed;
    left:2vw;
    top:3.8vw;
    z-index:1;
}

#nav-cart {
    position:fixed;
    right:2vw;
    top:3.8vw;
}

#nav ul {
    list-style:none;
}


#logo {
    position: fixed;
    /* center the element */
    right: 0;
    left: 0;
    top:2.7vw;
    margin-right: auto;
    margin-left: auto;
    /* give it dimensions */
    height: auto;
    width:25vw;
    z-index:1;
}

#logo img {
    height:auto;
}



 
 
/* Product page */
#product-container {
  display: flex;
  flex-wrap: wrap;
}


#product-details {
    width:40%;
    box-sizing: border-box;
    padding:2vw;
    position:fixed;
    left:60%;
}

#product-photos {
    width:60%;
    box-sizing: border-box;
    overflow: hidden;
}

#product-photos img {
    width:100%;
    height:100%;
    border-top:1px solid black;
    display:block;
}

#product-photos ul, li {
    list-style:none;
    margin:0;
    padding:0;
}

/* Product listing */
.grid {
  display: flex;
  flex-wrap: wrap;
}

.product-list {
    width: calc(100%/3);
    box-sizing: border-box;
    list-style:none;
    overflow: hidden;
}

.product-list img {
    max-width:100%;
    max-height:100%;
}

.product-wrapper {
    border-right:1px solid black;
    border-bottom:1px solid black;
}

.product-snippet {
    padding-left:2%;
    padding-right:2%;
}

.product-snippet-price {
    float:right;
}


