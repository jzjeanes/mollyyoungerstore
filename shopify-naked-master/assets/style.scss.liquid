/* Global styles */
body {
    font-family:Arial;
    font-size:16px;
    margin:0 auto;
}

footer {
    clear:both;
}

h1 {
    font-size:.8rem;
    letter-spacing:.02rem;
    text-transform:uppercase;
    font-weight:normal;
    text-align:center;
    margin-bottom:4rem;
    margin-top:3rem;
}

ul {
    padding:0;
    margin:0;
}


/* Links */

a {
    text-decoration:none;
}

a:visited {
    color:inherit;
}

a:hover {
    text-decoration:underline;
}



/* Start zoom styles */
.zoom {
	display: block;
	position: relative;
}
		

.zoom img {
	display: block;
}



 /* Start header section */
header {
    height:8vw;
    font-size:.8rem;
    letter-spacing:.02rem;
    text-transform:uppercase;
    text-decoration:none;
}

#nav {
    position:fixed;
    left:2vw;
    top:3.5vw;
    z-index:1;
}

#nav ul {
    list-style:none;
}


#logo {
    position: fixed;
    /* center the element */
    right: 0;
    left: 0;
    top:2.2vw;
    margin-right: auto;
    margin-left: auto;
    /* give it dimensions */
    height: auto;
    width:25vw;
    z-index:1;
}

#logo img {
    height:auto;
}

#cart {
    position:fixed;
    right:2vw;
    top:3.5vw;
}

 
 
/* Product page */



#product-details {
    width:40%;
    box-sizing: border-box;
    text-transform:uppercase;
    font-size:.7rem;
    padding:2vw;
}

#product-photos {
    width:60%;
    box-sizing: border-box;
    overflow: hidden;
}

#product-photos img {
    width:100%;
    height:100%;
    border-top:1px solid black;
    display:block;
}

#product-photos ul, li {
    list-style:none;
    margin:0;
    padding:0;
}

/* Product listing */
.grid {
  display: flex;
  flex-wrap: wrap;
  border-top:1px solid black;
}

.product-list {
    width: calc(100%/3);
    box-sizing: border-box;
    list-style:none;
    overflow: hidden;
    text-transform:uppercase;
    font-size:.8rem;
}

.product-list img {
    max-width:100%;
    max-height:100%;
    border:1px solid black;
}

