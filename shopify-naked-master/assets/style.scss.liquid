/*============================= Global styles =============================*/
html {
    font-family:Arial;
    text-transform:uppercase;
    font-size:12px;
    line-height:1.4;
}

body {
    margin:0 auto;
}

footer {
    clear:both;
    text-align: center;
    padding:20vw 10vw;
}







/*============================= Typography =============================*/


h1, h2, h3, h4, th {
    font-weight:normal;
}

h1 {
    font-size:2.5vw;
    text-transform:none;
    line-height:1.2;
    margin-bottom:2rem;
    margin-top:1rem;
}


ul {
    padding:0;
    margin:0;
}

p {
    margin-bottom:1rem;
}

.large {
    font-size:3vw;
    text-transform:none;
    line-height:1.2;
}

.btn {
    display:inline-block;
    border:1px solid black;
    padding:1rem;
}






/*============================= Forms and buttons =============================*/

select {
    height:2rem;
    font-size:inherit;
}

label {
    display:block;
    font-weight:bold;
    margin-bottom:.5rem;
}

.quantity {
    width:2rem;
}

table {
    width:100%;
}

input {
    background-color: white;
    border: 1px solid black;
    color: black;
    padding: 1rem 2rem;
    font-size:1rem;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    text-transform:uppercase;
    cursor: pointer;
}

input:hover {
    text-decoration: underline;
}








/*============================= Links =============================*/

a {
    text-decoration:none;
    color:black;
}

a:visited {
    color:black;
}

a:hover {
    text-decoration:underline;
    color:black;
}

a:active {
    text-decoration:underline;
    color:black;
}







/*============================= Promo/Content elements =============================*/
.three_fifths {
    width:60%;
    height:auto;
    box-sizing: border-box;
    overflow: hidden;
}

.two_fifths {
    width:40%;
    height:auto;
    box-sizing: border-box;
    overflow: hidden;
}

.large-padding {
    padding:15% 6%;
}

.img_fillcontainer {
    max-width:100%;
    height:auto;
    display:block;
}

#promo-section {
    border-bottom:1px solid black;
}



#home-products {
    margin-top:6rem;
}

#home-products h1 {
    text-align:center;
    font:inherit;
    text-transform:inherit;
}


/*============================= Product image zoom =============================*/
.zoom {
	display: block;
	position: relative;
}
		

.zoom img {
	display: block;
}



 /*============================= Start header section =============================*/
 
header {
    height:9vw;
    letter-spacing:.02rem;
    text-decoration:none;
    border-bottom:1px solid black;
}

#nav {
    position:fixed;
    left:2vw;
    top:3.8vw;
    z-index:1;
}

#nav-cart {
    position:fixed;
    right:2vw;
    top:3.8vw;
}

#nav ul {
    list-style:none;
}


#logo {
    position: fixed;
    /* center the element */
    right: 0;
    left: 0;
    top:2.7vw;
    margin-right: auto;
    margin-left: auto;
    /* give it dimensions */
    height: auto;
    width:25vw;
    z-index:1;
}

#logo img {
    height:auto;
}



 
 
/*============================= Product page =============================*/

#product-container {
  display: flex;
  flex-wrap: wrap;
  border-bottom:1px solid black;
}


#product-details {
    width:40%;
    box-sizing: border-box;
    padding:2vw 2vw 4vw 2vw;
    position:sticky;
    top:5rem;
    height:min-content;
}

#product-photos {
    width:60%;
    box-sizing: border-box;
    overflow: hidden;
}

#product-photos img {
    width:100%;
    height:100%;
    border-top:1px solid black;
    display:block;
}

#product-photos ul, li {
    list-style:none;
    margin:0;
    padding:0;
}

#product-price {
    margin-bottom:3rem;
}

#product-variants {
    margin-bottom:1rem;
}

#product-description {
    margin-bottom:3rem;
}




/* ============================= Product listing =============================*/


.grid {
  display: flex;
  flex-wrap: wrap;
}

.product-list {
    width: calc(100%/3);
    box-sizing: border-box;
    list-style:none;
    overflow: hidden;
}

.product-wrapper {
    border-right:1px solid black;
    border-bottom:1px solid black;
}

.product-snippet {
    padding: 2% 2% 2% 3%;
}

.product-snippet-price {
    float:right;
}


/*============================= Product image change on hover =============================*/


.reveal .hide { 
    display: block !important; 
    visibility: visible !important;
}

.product:hover .reveal img { 
    opacity: 1; 
}
.reveal { 
    position: relative; 
}

.reveal .hide { 
  position: absolute;
  z-index: -1;
  top: 0;
  opacity: 0;
}

.reveal:hover .hide { 
  z-index: 100000;
  opacity: 1;    
}



